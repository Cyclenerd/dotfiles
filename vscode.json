{
    "telemetry.enableTelemetry": false,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "editor.fontSize": 18,
    "editor.fontFamily": "'Source Code Pro', Monaco, 'Courier New', monospace",
    "workbench.colorTheme": "Monokai",
    "workbench.colorCustomizations": {
        "tab.border": "#1e1f1c",
        "tab.inactiveBackground": "#1e1f1c",
        "tab.inactiveForeground": "#ccccc7",
        "tab.activeBackground": "#414339",
        "tab.activeForeground": "#ccccc7"
    },
    "editor.acceptSuggestionOnEnter": "smart",
    "window.newWindowDimensions": "inherit",
    "workbench.startupEditor": "newUntitledFile",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.external.linuxExec": "lxterm",
    "extensions.ignoreRecommendations": true,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "workbench.statusBar.feedback.visible": false
}